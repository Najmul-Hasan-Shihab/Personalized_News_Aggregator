# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite is used for Django auth (default)
DATABASE_URL=sqlite:///db.sqlite3

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=news_aggregator_db

# News API Keys
# Get your free API keys from:
# NewsAPI: https://newsapi.org/register
# GNews: https://gnews.io/register  
# Mediastack: https://mediastack.com/product
NEWSAPI_KEY=your_newsapi_key_here
GNEWS_KEY=your_gnews_key_here
MEDIASTACK_KEY=your_mediastack_key_here

# CORS Settings
# Add your frontend URLs (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT Settings (Optional - defaults are fine for development)
# JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
# JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Redis Cache (Optional - for future use)
# REDIS_URL=redis://localhost:6379/0

# Celery (Optional - for future background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
